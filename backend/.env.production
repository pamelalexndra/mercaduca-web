# ===== BACKEND (.env.production) =====
# Para Railway
NODE_ENV=production
PORT=3000

# Database (Railway te da una PostgreSQL automática)
DATABASE_URL=postgresql://postgres:password@localhost:5432/myapp

# JWT y autenticación
JWT_SECRET=tu-super-secreto-jwt-aqui
JWT_EXPIRES_IN=7d

# CORS - Dominios permitidos
FRONTEND_URL=https://tu-app.vercel.app
ALLOWED_ORIGINS=https://tu-app.vercel.app,http://localhost:3000,http://localhost:5173

# API configuración
API_VERSION=v1

# ===== FRONTEND (.env.production) =====
# Para Vercel
VITE_API_URL=https://tu-backend.railway.app
VITE_APP_NAME=MiApp
VITE_APP_VERSION=1.0.0

# ===== FRONTEND (.env.local - para desarrollo) =====
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=MiApp Dev
VITE_APP_VERSION=1.0.0-dev

# ===== BACKEND (.env.local - para desarrollo) =====
NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://postgres:password@localhost:5432/myapp_dev
JWT_SECRET=dev-secret-not-for-production
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173